#include<stdio.h>
int main()
{
    int n,r,s=0,p=1;
    printf("enter a number");
    scanf("%d",&n);
    while(n>0)
    {
        r=n%10;
        n=n/10;
        s=s+r;
        p=p*r;

    }
    printf("sum of number is=%d\n product of  number is=%d",s,p);
    if(s==p)
    {
        printf("\nnumber is magic number");

    }
    else
    {
        printf("\nnumber is not magic number");
    }

}
